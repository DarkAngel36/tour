extends ../pug/templates/main

block vars
	- var title = "Регистрация";
	- var headerClasses = ['header1'];
	//- - var footerClasses = ['footer1'];

//- block title
//- 	| Главная страница


//- Content Start     ============================================


block content

	// Content Start     ============================================

	main#content

		// - - - - - - - - - - - - - .title_box - - - - - - - - - - - - - - - -

		.title_box.bg_blue
			h1.white Личный кабинет

		// - - - - - - - - - - - - - End of .title_box - - - - - - - - - - - - - - - -

		// - - - - - - - - - - - - - something_container - - - - - - - - - - - - - - - -

		section.indent
			h2.mb40.al_center Регистрация
			.container
				.row
					.col-lg-6.col-lg-offset-3.col-md-8.col-md-offset-2
						form.registration_form
							.form_row
								label.form_label Имя
								input.form_input(type="text")
							.form_row
								label.form_label Фамилия
								input.form_input(type="text")
							.form_row
								label.form_label Отчество
								input.form_input(type="text")
							.form_row
								label.form_label E-mail
								input.form_input(type="email")
							.form_row
								label.form_label Телефон
								input.form_input(type="tel")
							.form_row
								label.form_label Придумайте пароль (не менее 8 символов)
								input.form_input(type="password")
							.form_row.mb30
								label.form_label Повторите пароль
								input.form_input(type="password")
							.form_captcha
								img(src="images/captcha.png", alt="")
							.form_button
								button.btn_orange.btn_w3.btn_size4 Зарегистрироваться

		// - - - - - - - - - - - - - End of something_container - - - - - - - - - - - - - - - -

	// Content End       ============================================


//- Content End       ============================================



//- Popup Start     ============================================


block popup

	// Popup Start     ============================================

	div(class="d_none")

		#request_popup.arcticmodal_container_box
			.arcticmodal-close &times;
			div Для отмены заявки, свяжитесь с нами по телефону +7 (819) 987-90-90

		#enter_popup.arcticmodal_container_box.popup_indent
			.arcticmodal-close &times;
			h3.md.al_center.mb30 Вход для агентов
			form.agent_registration_form
				.form_row.mb20
					.form_label E-mail
					input.form_input(type="text")
				.form_row.mb30
					.form_label Пароль
						span (
							a.link-lg.link-blue-lite.link-bd(href="javascript:;") Забыли пароль?
							|)
					input.form_input.mb10(type="text")
					div.al_right: a.link_reg.link-sm2.link-blue-lite.link-bd(href="javascript:;") Зарегистрироваться
				.form_button
					button.btn_orange.btn_w Войти

		#pay_popup.arcticmodal_container_box.popup_indent2.al_center
			.arcticmodal-close &times;
			h2.md.mb40 Оплата
			a.btn_w5.btn-blue.btn_size6.mb17(href="javascript:;") Оплата картой
			a.btn_w5.btn-blue.btn_size6(href="javascript:;") Оплата по реквизитам

	// Popup End       ============================================


//- Popup End       ============================================